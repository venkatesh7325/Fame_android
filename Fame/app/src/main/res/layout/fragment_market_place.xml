<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.purpledot.fame.fragments.dashboardFragments.MarketPlaceFragment">

    <EditText

        android:id="@+id/edt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fivedp"
        android:layout_marginBottom="@dimen/fivedp"
        android:background="@drawable/edt_text_background"
        android:drawableRight="@android:drawable/ic_menu_search"
        android:hint="Search"
        android:padding="@dimen/fivedp"
        android:imeOptions="actionSearch"
        android:textColorHint="@color/app_black_buttons_bg_color" />

    <requestFocus />

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_market_place_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
